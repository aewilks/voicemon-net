<Application
    x:Class="voicemon.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:voicemon"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!-- Add the OnLaunched event handler to start the app -->
    <Application.Resources>
        <ResourceDictionary>
            <x:Double x:Key="PitchUpdateInterval">100</x:Double>
            <x:Int32 x:Key="SamplesPerSecond">44100</x:Int32>
            <x:Int32 x:Key="BytesPerSample">2</x:Int32>
            <x:Int32 x:Key="FrameSize">2048</x:Int32>
            <x:Double x:Key="MinimumFrequency">80</x:Double>
            <x:Double x:Key="MaximumFrequency">400</x:Double>
            <x:Int32 x:Key="MaximumDataPoints">500</x:Int32>
        </ResourceDictionary>
    </Application.Resources>


</Application>
